{
    "compilerOptions": {
        "target": "ES2019",
        "module": "esnext",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "removeComments": true,
        "jsx": "react",
        "jsxFactory": "h"
    },
    "include": ["src"],
    "exclude": ["node_modules", "test/**/*.ts"]
}
